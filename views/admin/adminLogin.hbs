<section class="vh-100 pt-5">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100 pt-5">

      <div class="col-md-4 ml-auto mr-auto  offset-xl-1">
        <form action="/admin/adminLogin" method="post">
          {{!-- <h3>Mobile World</h3> --}}
          <h4 class="text-secondary pt-2 text-center">Admin Login</h4>
          <!-- Email input -->
          <div class="form-outline mb-4">
             <label class="form-label" for="form1Example13">Email address</label>
            <input type="email" id="form1Example13" name="email" class="form-control form-control-lg" required />
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example23">Password</label>
            <input type="password" id="form1Example23" name="password" class="form-control form-control-lg" required />
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
          </div>

          {{#if adminLoggErr}}
          <p class="text-danger">{{adminLoggErr}}</p>
          {{/if}}



          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Log in</button>
          

        </form>
      </div>
    </div>
  </div>
</section>